{
  "permissions": {
    "allow": [
      "Bash(./scripts/test-examples.sh:*)",
      "Bash(./target/debug/cuenv:*)",
      "Bash(bun:*)",
      "Bash(cargo:*)",
      "Bash(gh:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(nix:*)",
      "WebFetch(domain:github.com)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "nix fmt"
          }
        ]
      }
    ]
  }
}