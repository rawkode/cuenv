      "Bash(bun:*)",
      "Bash(cargo:*)",
      "Bash(curl:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(nix:*)",
      "Bash(tar:*)",
      "WebFetch(domain:github.com)",
